@model NoteMarketPlace.Models.ForgotPassword
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="all-box" id="forgotPassword-page">

    <div class="box-wrapper container">

        <div class="row justify-content-center align-items-center" style="height:100%;">
            <div class="col-xl-5 col-lg-7  col-md-8 col-sm-9 col-11">

                <div class="logo text-center">
                    <img src="~/images/login/top-logo.png" alt="logo">
                </div>
                <div class="box-form">

                    <div class="text-center">
                        <h2 class="form-heading">Forgot Password?</h2>
                        <p class="form-text">Enter your email to reset your password</p>
                    </div>
                    @using (Html.BeginForm("ChangePassword", "Account"))
                    {
                        <div class="form-group box-grp">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control input-box" })
                            @Html.ValidationMessageFor(m => m.Email)
                           
                        </div>
                        <button type="submit" class="btn btn-general">Submit</button>
                    }

                </div>

            </div>
        </div>
    </div>
</section>

