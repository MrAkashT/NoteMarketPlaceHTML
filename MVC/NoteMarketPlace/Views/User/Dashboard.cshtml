</header>

<div id="dashboard" class="for-footer-at-bottom">
    <div class="container">
        <div class="content-box">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-6">
                    <h2 class="heading-md">Dashboard</h2>
                </div>
                <div class="col-md-6 col-sm-6 col-6">
                    @Html.ActionLink("Add Note", "AddNote", "User", new { area = "" }, new {
                   role = "button",
                   id = "add-note-btn",
                   @class = "btn login-submit-btn btn-height"
               })
                </div>
            </div>

            <div id="dashboard-stats">
                <div class="row">
                    <div class="col-xl-7 col-lg-12 col-md-12 col-sm-12 ">
                        <div class="dashboard-stats-box">
                            <div class="row">
                                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
                                    <div class="">
                                        <img src="~/images/front/my-earning.png" alt="">
                                        <h3 class="heading-md box-content">My Earning</h3>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
                                    <div class="text-center">
                                        <h3 class="heading-sm">0</h3>
                                        <p class="para-text">Number of Notes Sold</p>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
                                    <div class="text-center">
                                        <h3 class="heading-sm">$0</h3>
                                        <p class="para-text">Money Earned</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-5 col-lg-12 col-md-12 col-sm-12">
                        <div class="row">
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                                <div class="dashboard-stats-box">
                                    <div class="row justify-content-center align-items-center">
                                        <div class="text-center">
                                            <h3 class="heading-sm">0</h3>
                                            <p class="para-text">My Downloads</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                                <div class="dashboard-stats-box">
                                    <div class="row justify-content-center align-items-center ">
                                        <div class="text-center">
                                            <h3 class="heading-sm">0</h3>
                                            <p class="para-text">My Rejected Notes</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                                <div class="dashboard-stats-box">
                                    <div class="row justify-content-center align-items-center">
                                        <div class="text-center">
                                            <h3 class="heading-sm">@Model.BuyerCount</h3>
                                            <p class="para-text">Buyer Request</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="in-progress">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <h2 class="heading-sm">In Progress Notes</h2>
                </div>
                <div class="col-md-6 col-sm-6">
                    @using (@Html.BeginForm("Dashboard", "User", FormMethod.Post, new { id = "SearchNotes" }))
                    {
                        <div class="form-inline relative" id="note-search">
                            @Html.TextBoxFor(m => m.SearchDraftNote, new { @class = "form-control", placeholder = "Seach" })
                            @Html.Hidden("Name", "Inprogress")
                            @Html.HiddenFor(m => m.SearchPublishNote)
                            <img class="search-icon" src="~/images/Dashboard/search.jpg" alt="">
                            <a href="javascript:$('#SearchNotes').submit();" class="btn login-submit-btn btn-height" role="button">Search</a>
                        </div>
                     } 

                </div>
            </div>
            <div class="table-responsive">
                <table class="table" id="Inprogress-notes" style="width:100%;">
                   
                    <thead>
                        <tr>
                            <th scope="col">ADDED DATE</th>
                            <th scope="col">TITLE</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">STATUS</th>
                            <th scope="col">ACTIONS</th>
                        </tr>
                    </thead>

                    <tbody id="table-content">
                        @foreach (var note in @Model.Notes)
                        {
                            <tr>
                                <td scope="row">@note.AddedDate.ToString("dd MMM yyyy")</td>
                                <td>@note.Title</td>
                                <td>@note.Category</td>
                                <td>@note.Status</td>
                                <td>
                                    @if (note.Status == "Draft")
                                    {
                                        <a href="@Url.Action("UpdateNote", "User", new { noteId = note.NoteId })">
                                            <img src="~/images/Dashboard/edit.png" alt="edit">
                                        </a>
                                        <span>&nbsp; &nbsp;</span>
                                        <a class="js-delete-note" data-note-id="@note.NoteId" style="cursor:pointer;">
                                            <img src="~/images/front/delete.png" alt="delete">
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("ViewNote", "User", new { id = note.NoteId })">
                                            <img src="~/images/Dashboard/eye.png" alt="view">
                                        </a>
                                    }

                                </td>
                            </tr>
                        }
                       
                    </tbody>
                </table>

            </div>

        </div>

        <div id="published-note">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <h2 class="heading-sm">Published Notes</h2>
                </div>
                <div class="col-md-6 col-sm-6">
                    @using (@Html.BeginForm("Dashboard", "User", FormMethod.Post, new { id = "PublishedNotes" }))
                    {
                        <div class="form-inline relative" id="note-search">
                            @Html.TextBoxFor(m => m.SearchPublishNote, new { @class = "form-control", placeholder = "Seach" })
                            @Html.Hidden("Name","Published")
                            @Html.HiddenFor(m => m.SearchDraftNote)
                            <img class="search-icon" src="~/images/Dashboard/search.jpg" alt="">
                            <a href="javascript:$('#PublishedNotes').submit();" class="btn login-submit-btn btn-height" role="button">Search</a>
                        </div>
                    }
                    
                </div>
            </div>

            <div class="table-responsive">
                <table class="table" id="published-notes">
                    <thead>
                        <tr>
                            <th scope="col">ADDED DATE</th>
                            <th scope="col">TITLE</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">SELL TYPE</th>
                            <th scope="col">PRICE</th>
                            <th scope="col">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var note in @Model.publishedNotes)
                        {
                            <tr>
                                <td scope="row">@note.AddedDate.ToString("dd MMM yyyy")</td>
                                <td>@note.Title</td>
                                <td>@note.Category</td>
                                <td>@note.SellType</td>
                                <td>$@note.Price</td>
                                
                                <td>
                                    <a href="@Url.Action("ViewNote", "User", new { id = note.NoteId })">
                                        <img src="~/images/Dashboard/eye.png" alt="eye for view">
                                    </a>
                                </td>
                            </tr>
                        }
                      
                    </tbody>
                </table>

            </div>

           
        </div>

    </div>
</div>

@Html.Partial("_Footer")
@section scripts 
{
    <script>

        $(document).ready(function () {

            var table = $("#Inprogress-notes").DataTable({
                pagingType: "simple_numbers",
                columnDefs: [
                    {
                        orderable: false, targets: 4,
                    },
                    {
                        type: "date", targets: 0
                    }
                ],
                language: {
                    paginate: {
                        next: '<i class="fa fa-chevron-right"></i>',
                        previous: '<i class="fa fa-chevron-left"></i>'
                    }
                },
               order: [[0, "desc"]]

            });

            $("#published-notes").DataTable({
                pagingType: "simple_numbers",
                columnDefs: [
                    { orderable: false, targets: 5 }
                ],
                language: {
                    paginate: {
                        next: '<i class="fa fa-chevron-right"></i>',
                        previous: '<i class="fa fa-chevron-left"></i>'
                    }
                }
            });

            
            $("#Inprogress-notes").on("click", ".js-delete-note", function () {
                var button = $(this);
                if (confirm("Are you sure want to delete this note?")) {
                    var nid = button.attr("data-note-id");
                    
                    $.ajax({
                        //async: false,
                        method: "POST",
                        url: "@Url.Action("DeleteDraftNote", "User")?id=" + nid,
                        error: function (request) { alert(request.statusText) },
                        success: function () {
                           
                            table.row(button.parents("tr")).remove().draw();
                         }
                     })
                }
                  
            });
        })

    </script>
}