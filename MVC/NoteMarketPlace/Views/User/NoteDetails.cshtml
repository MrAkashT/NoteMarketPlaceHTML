                                    <img src="@Url.Content("~/Members/"+Model.sellerNote.SellerID+"/"+Model.sellerNote.ID+"/"+Model.sellerNote.DisplayPicture)" alt="">
                                </div>
                            </div>
                            <div class=" col-xl-8 col-lg-7 col-md-9 col-sm-8">
