@model NoteMarketPlace.Models.ContactUs
@{
    ViewBag.Title = "Contact";
}

<header>
    <nav class="navbar navbar-expand-md fixed-top white-navbar">
        <div class="container nav-wrapper">

            <!-- Mobile Menu Open Button -->
            <span id="mobile-nav-open-btn">&#9776;</span>

            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home", new { @class = "navbar-brand" }, null)">
                    <img id="logo" class="img-fluid" src="~/images/User-Profile/logo.png" alt="logo">
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Search Notes", "SearchNotes", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    @if (Session["userId"] == null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Sell Your Notes", "Login", "Account", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Sell Your Notes", "Dashboard", "User", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    @if (Session["userId"] != null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Buyer Request", "BuyerRequest", "User", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                    <li class="nav-item">
                        @Html.ActionLink("FAQ", "FAQ", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact Us", "Contact", "Home", new { area = "" }, new { @class = "nav-link active" })
                    </li>
                    @if (Session["userId"] != null)
                    {
                        <li>
                            <div class="dropdown">
                                <a type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false">
                                    <img src="~/images/front/user-img.png" alt="">
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                    @Html.ActionLink("My Profile", "UserProfile", "User", new { area = "" }, new { @class = "dropdown-item" })
                                    <a class="dropdown-item" href="my-downloads-page.html">My Download</a>
                                    <a class="dropdown-item" href="my-sold-notes.html">My Sold Notes</a>
                                    <a class="dropdown-item" href="my-rejected-notes.html">My Rejected Notes</a>
                                    <a class="dropdown-item" href="#">Change Password</a>
                                    <a class="dropdown-item logout" href="login-page.html">Logout</a>

                                </div>
                            </div>
                        </li>
                    }
                    @if (Session["UserId"] != null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "btn nav-link login-submit-btn" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "btn nav-link login-submit-btn" })
                        </li>
                    }
                </ul>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-nav">
                <!-- Mobile Menu Close Button -->
                <span id="mobile-nav-close-btn">&times;</span>
                <img class="logo" src="~/images/User-Profile/logo.png" alt="">
                <div id="mobile-nav-content">
                    <ul class="nav">
                        <li><a class="link" href="seacrh-page.html">Search Notes</a></li>
                        <li><a class="link" href="#">Sell Your Notes</a></li>
                        <li><a class="link" href="faq-page.html">FAQ</a></li>
                        <li><a class="link active" href="contactUs-page.html">Contact Us</a></li>
                        <li><a class="btn login-submit-btn link" href="login-page.html">Login</a></li>
                    </ul>
                </div>
            </div>

        </div>
    </nav>
</header><div class="page-banner">
    <h2 class="page-banner-text">Contact Us</h2>
</div>
<section id="contact-us-page" class="for-footer-at-bottom">
    <div class="content-box">
        <div class="container">
            @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post, new { id = "contact"})) 
            { 
                <!-- Basic Profile Details -->
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <h2 class="heading-md">Get in Touch</h2>
                        <h4 class="para-text">Let us know how to get back to you</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group box-grp">
                            @Html.LabelFor(m => m.FirstName)
                            @Html.TextBoxFor(m => m.FirstName, new
                            {
                                @class = "form-control input-box",
                                placeholder = "Enter Your First Name"
                            })
                            @Html.ValidationMessageFor(m => m.FirstName)

                        </div>
                        <div class="form-group box-grp">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new
                            {
                                @class = "form-control input-box",
                                placeholder = "Enter Your Email Address"
                            })
                            @Html.ValidationMessageFor(m => m.Email)

                        </div>
                        <div class="form-group box-grp">
                            @Html.LabelFor(m => m.Subject)
                            @Html.TextBoxFor(m => m.Subject, new
                            {
                                @class = "form-control input-box",
                                placeholder = "Enter Your Subject"
                            })
                            @Html.ValidationMessageFor(m => m.Subject)
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="form-group box-grp">
                            @Html.LabelFor(m => m.Comments)
                            @Html.TextAreaFor(m => m.Comments, new
                            {
                                @class = "form-control input-box",
                                placeholder = "Comments...",
                                rows="13"
                            })
                            @Html.ValidationMessageFor(m => m.Comments)
                            
                        </div>
                    </div>
                </div>
                <input type="hidden" id="msg" value="@ViewBag.send"/>
                <a href="javascript:$('#contact').submit();" class="btn login-submit-btn btn-height">Submit</a>

            }
        </div>
    </div>
</section>
@Html.Partial("_Footer")

@section scripts
{
    <script>
        $(document).ready(function () {
            var msg = $("#msg").val();
            if (msg == "success") {
                alert("Thank you for contact us.")
            }
        })
    </script>
}