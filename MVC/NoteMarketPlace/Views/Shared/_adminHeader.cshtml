                                    @Html.ActionLink("Notes Under Review", "NotesUnderReview", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Published Notes", "PublishedNotes", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Downloaded Notes", "DownloadedNotes", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Rejected Notes", "RejectedNotes", "Admin", new { area = "" }, new { @class = "dropdown-item" })

                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Members", "Members", "Admin", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <span type="button" id="dropdownMenuButton" class="nav-link" data-toggle="dropdown" aria-haspopup="true"
                                      aria-expanded="false">Reports</span>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                    @Html.ActionLink("Spam Report", "Reports", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <span type="button" id="dropdownMenuButton" class="nav-link" data-toggle="dropdown" aria-haspopup="true"
                                      aria-expanded="false">Settings</span>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                    @if (Session["super admin"] != null)
                                    {
                                        @Html.ActionLink("Manage System Configuration", "ManageSystemConfiguration", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                        @Html.ActionLink("Manage Administartor", "ManageAdministrator", "Admin", new { area = "" }, new { @class = "dropdown-item" })

                                    }
                                    @Html.ActionLink("Manage Category", "ManageCategory", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Manage Type", "ManageType", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                    @Html.ActionLink("Manage Countries", "ManageCountries", "Admin", new { area = "" }, new { @class = "dropdown-item" })

