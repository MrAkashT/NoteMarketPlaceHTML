                                        <a class="dropdown-item logout" href="@Url.Action("Logout", "Account")">Logout</a>
                                    </div>
                                </div>
                            </li>
                            <li><a class="btn login-submit-btn link" href="@Url.Action("Logout", "Account")">Logout</a></li>
                        </ul>
                    </div>
