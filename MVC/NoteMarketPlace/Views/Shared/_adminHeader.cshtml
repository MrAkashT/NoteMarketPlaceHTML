                                <a type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                   aria-expanded="false">
                                    @if (Session["defaultImg"] != null && Session["AdminImg"] == null)
                                    {
                                        string defaultimg = (string)Session["defaultImg"];
                                        <img src="~/DefaultImages/@defaultimg" alt="">
                                    }
                                    else
                                    {
                                        <img src="~/Members/@uid/@imgg" alt="">
                                    }
                                    
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="@Url.Action("UpdateProfile", "Admin")">Update Profile</a>
                                    <a class="dropdown-item" href="@Url.Action("ChangeUserPassword", "Account")">Change Password</a>
                                    <a class="dropdown-item logout" href="@Url.Action("Logout", "Account")">Logout</a>

                                </div>
                            </div>
                        </li>
                        <li class="nav-item"><a href="@Url.Action("Logout", "Account")" class="btn nav-link login-submit-btn">Logout</a></li>
