@model NoteMarketPlace.Models.AddType
@{
    ViewBag.Title = "AddType";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_adminHeader")
<section id="add-type-page" class="top-margin for-footer-at-bottom">
    <div class="content-box">
        <div class="container">
            @using (Html.BeginForm("SaveType", "Admin", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h2 class="heading-md">Add Type</h2>

                        <div class="form-group box-grp">
                            @Html.LabelFor(m => m.TypeName)
                            @Html.TextBoxFor(m => m.TypeName, new
                            {
                                @class = "form-control input-box",
                                placeholder = "Enter Your Type"
                            })
                            @Html.ValidationMessageFor(m => m.TypeName)

                        </div>

                        <div class="form-group box-grp">
                            @Html.LabelFor(m => m.Description)
                            @Html.TextAreaFor(m => m.Description, new
                            {
                                @class = "form-control",
                                rows = "5",
                                placeholder = "Enter Your Description"
                            })
                            @Html.ValidationMessageFor(m => m.Description)

                        </div>
                        @Html.HiddenFor(m => m.Id)
                        <button class="btn submit-btn">Submit</button>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
@Html.Partial("_adminFooter")