@model NoteMarketPlace.Models.AddCountries
@{
    ViewBag.Title = "AddCountries";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_adminHeader")
<section id="add-country-page" class="top-margin for-footer-at-bottom">
    <div class="content-box">
        <div class="container">
            @using (Html.BeginForm("SaveCountry", "Admin", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h2 class="heading-md">Add Country</h2>

                        <div class="form-group box-grp">
                            @Html.LabelFor(m => m.CountryName)
                            @Html.TextBoxFor(m => m.CountryName, new
                            {
                                @class = "form-control input-box",
                                placeholder = "Enter Your Country Name"
                            })
                            @Html.ValidationMessageFor(m => m.CountryName)
                        </div>

                        <div class="form-group box-grp">
                            @Html.LabelFor(m => m.CountryCode)
                            @Html.TextBoxFor(m => m.CountryCode, new
                            {
                                @class = "form-control input-box",
                                placeholder = "Enter Your Country Code"
                            })
                            @Html.ValidationMessageFor(m => m.CountryCode)
                           
                        </div>
                        @Html.HiddenFor(m => m.Id)
                        <button type="submit" class="btn submit-btn">Submit</button>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
@Html.Partial("_adminFooter")
