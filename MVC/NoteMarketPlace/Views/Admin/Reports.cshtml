@model NoteMarketPlace.ViewModel.SpamReportViewModel
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_adminHeader")
<section id="spam-report-page" class="top-margin manage for-footer-at-bottom">
    <div class="content-box">
        <div class="container">

            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <h2 class="heading-md">Spam Reports</h2>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-inline relative note-search">
                        @Html.TextBoxFor(m => m.Search, new { @class = "form-control", placeholder = "Search" })
                        <img class="search-icon" src="~/images/Dashboard/search.jpg" alt="">
                        <button class="btn search-btn">Search</button>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table" id="spam-report">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">SR NO.</th>
                            <th scope="col">REPORTED BY</th>
                            <th scope="col">NOTE TITLE</th>
                            <th scope="col">CATEGORY</th>
                            <th scope="col">DATE EDITED</th>
                            <th scope="col">REMARK</th>
                            <th scope="col" class="text-center">ACTION</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 1;}
                        @foreach (var note in Model.Reports)
                        {
                            <tr>
                                <td scope="row" class="text-center">@i</td>
                                <td>@note.ReportedBy</td>
                                <td style="cursor: pointer;" onclick="window.location.href='@Url.Action("ViewNote", "User", new { id = note.Id })'"
                                    >@note.Title</td>
                                <td>@note.Category</td>
                                <td  data-order="@note.DateAdded.ToString("MMddyyyyHHmmss")"
                                    >@note.DateAdded.ToString("dd-MM-yyyy, HH:ss")</td>
                                <td>@note.Remark</td>
                                <td class="text-center">
                                   <img style="cursor: pointer;" class="dlt-btn" id="@note.reportId" src="~/images/admin/delete.png" alt="">
                                </td>
                                <td class="text-center">
                                    <div class="dropdown">
                                        <a type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                           aria-haspopup="true" aria-expanded="false">
                                            <img src="~/images/admin/dots.png" alt="options">
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right"
                                             aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item download-btn" id="@note.Id" href="javascript:void(0)">Download Notes</a>
                                            <a class="dropdown-item" href="@Url.Action("ViewNote", "User", new { id = note.Id })">View More Details</a>

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            i++;
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</section>

@Html.Partial("_adminFooter")

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#spam-report").DataTable({
                pagingtype: "simple_numbers",
                columndefs: [
                    {
                        orderable: false, targets: 6
                    },
                    {
                        type: "datetime", targets: 4
                    }
                ],
                language: {
                    paginate: {
                        next: '<i class="fa fa-chevron-right"></i>',
                        previous: '<i class="fa fa-chevron-left"></i>'
                    }
                },
                order: [[4, "desc"]]
            });

            $(".search-btn").on("click", function () {
                var search = $("#Search").val();
                window.location.href = "/Admin/Reports?search=" + search;
            })

            $(".download-btn").on("click", function () {
                var noteid = $(this).attr("id");
                window.location = "/User/DownloadFile?id=" + noteid;
            });
            $(".dlt-btn").on("click", function () {
                if (confirm("Are you sure you want to delete reported issue?")) {
                    var id = $(this).attr("id");
                    $.ajax({
                        method: "POST",
                        url: "@Url.Action("RemoveIssue","Admin")",
                        data: { id: id },
                        success: function () {
                            window.location.reload();
                        },
                        error: function () {
                            alert("error");
                        }
                    })
                }
                
            });
        });
    </script>
}