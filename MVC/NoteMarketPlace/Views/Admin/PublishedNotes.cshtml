@model NoteMarketPlace.ViewModel.AdminNotesViewModel
@{
    ViewBag.Title = "PublishedNotes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.Partial("_adminHeader")
<section id="admin-published-notes" class="top-margin manage for-footer-at-bottom">
    <div class="content-box">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <h2 class="heading-md">Published Notes</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Seller, new { style = "margin-bottom: 10px;" })
                        @Html.DropDownListFor(m => m.Seller, new SelectList(Model.Sellers, "ID", "FirstName"), "Select Seller", new { @class = "form-control remove-arrow admin-select" })

                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="form-inline form-group relative note-search">
                        @Html.TextBoxFor(m => m.Search, new { @class = "form-control", placeholder = "Search" })
                        <img class="search-icon" src="~/images/Dashboard/search.jpg" alt="">
                        <button class="btn search-btn">Search</button>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table" id="admin-published-notes-table">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">SR NO.</th>
                            <th scope="col">NOTE TITLE</th>
                            <th scope="col">CATEGORY</th>
                            <th>SELL TYPE</th>
                            <th>PRICE</th>
                            <th scope="col">SELLER</th>
                            <th></th>
                            <th scope="col">PUBLISHED DATE</th>
                            <th scope="col">APPROVED BY</th>
                            <th scope="col" class="text-center">NUMBER OF <br> DOWNLOADS</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 1;}
                        @foreach(var note in Model.PublishedNotes)
                        {
                            <tr>
                                <td scope="row" class="text-center">@i</td>
                                <td style="cursor:pointer;" onclick="window.location.href='@Url.Action("ViewNote", "User", new { id = note.Id })'">@note.Title</td>
                                <td>@note.Category</td>
                                <td>@note.SellType</td>
                                <td>$@note.Price</td>
                                <td>@note.Seller</td>
                                <td><img src="~/images/admin/eye.png" alt=""></td>
                                <td data-order="@note.PublishedDate.ToString("MMddyyyyHHmmss")"
                                    >@note.PublishedDate.ToString("dd-MM-yyyy, HH:mm")</td>
                                <td>@note.ApproveBy</td>
                                <td class="text-center">@note.NumberOfDownloads</td>
                                <td>
                                    <div class="dropdown">
                                        <a type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                           aria-haspopup="true" aria-expanded="false">
                                            <img src="~/images/admin/dots.png" alt="options">
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right"
                                             aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item" id="download-btn" data-id="@note.Id" href="javascript:void(0)">Download Note</a>
                                            <a href="@Url.Action("ViewNote", "User", new { id = note.Id})" class="dropdown-item">View More Details</a>
                                            <a class="dropdown-item unpublish" data-id="@note.Id" data-name="@note.Title" href="javascript:void(0)">Unpublish</a>

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            i++;
                        }
                      
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>
</section>
@Html.Partial("_adminFooter")

@section scripts 
{
    <script>
        $(document).ready(function () {

            $("#admin-published-notes-table").DataTable({
                pagingtype: "simple_numbers",
                columndefs: [
                    {
                        orderable: false, targets: 4
                    },
                    {
                        type: "date", targets: 7
                    }
                ],
                language: {
                    paginate: {
                        next: '<i class="fa fa-chevron-right"></i>',
                        previous: '<i class="fa fa-chevron-left"></i>'
                    }
                },
                order: [[7, "desc"]]
            });

            $("#Seller").on("change", function () {
                var name = $(this).val();
                var search = $("#Search").val()
                window.location.href = "/Admin/PublishedNotes?search=" + search + "&name=" + name;
            })

            $(".search-btn").on("click", function () {
                var name = $("#Seller").val();
                var search = $("#Search").val()
                window.location.href = "/Admin/PublishedNotes?name=" + name + "&search=" + search;
            });

            $("#download-btn").on("click", function () {
                var noteid = $(this).attr("data-id");
                window.location = "/User/DownloadFile?id=" + noteid;
            });

            $("#admin-published-notes").on("click", ".unpublish", function () {
                var id = $(this).attr("data-id");
                var name = $(this).attr("data-name");
                var modal = `<!-- Modal -->
                        <div class="modal fade" id="unpublish" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                             aria-hidden="true">
                            <div class="modal-dialog " role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button id="close-btn" type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true"><img src="/images/Notes Details/close.png" alt=""></span>
                                        </button>
                                    </div>
                                    <div class="modal-body" id="add-review-content">
                                        <h2 class="heading-sm">${name}</h2>

                                        <div class="form-group">
                                            <label for="remark">Remarks *</label>
                                            <textarea id="remark" class="form-control" style="color:#000;" placeholder="Remarks ..."></textarea>
                                        </div>
                                        <div style="margin-bottom:20px;">
                                            <button class="btn btn-danger" data-id="${id}" id="unpublish-btn">Unpublish</button>
                                            <button class="btn btn-primary" id="cancel-btn" style="border:none;background-color:grey;">Cancel</button>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>`;
                $("#admin-published-notes").append(modal);
                $("#unpublish").modal("show");
            }).on("click", "#unpublish-btn", function () {
                    var id = $(this).attr("data-id");
                    var remark = $("#remark").val();

                if (!remark) {
                    $("<p id='remark-validation' style='color: red;'>Remarks is Required.</p>").insertAfter("#remark")
                }
                else {
                    if (confirm("Are you sure you want to Unpublish this note.")) {
                        $("#remark").val("");
                        $("#unpublish").modal("hide");
                        $.ajax({
                            method: "POST",
                            url: "@Url.Action("UnpublishNote", "Admin")?NoteId=" + id + "&remark=" + remark,
                            error: function () {
                                alert("err")
                            },
                            success: function () {
                                alert("success");
                                window.location.reload();
                            }
                        });
                    }

                }

            }).on("click", "#cancel-btn", function () {

                $("#remark").val("");
                $("#remark-validation").remove();
                $("#unpublish").modal("hide");

            }).on("click","#close-btn", function () {
                $("#remark").val("");
                $("#remark-validation").remove();
            });

        })
    </script>
}